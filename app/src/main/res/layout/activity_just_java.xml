<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.justjava.JustJava">


    <TextView
        android:id="@+id/quantity_name"
        android:layout_width="@dimen/wrap_content"
        android:layout_height="@dimen/wrap_content"
        android:layout_marginBottom="@dimen/marginbottom"
        android:padding="@dimen/textview_padding"
        android:text="@string/quantity"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="@dimen/match_parent"
        android:layout_height="@dimen/wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/minus_button"
            android:layout_width="@dimen/buttonsize"
            android:layout_height="@dimen/buttonsize"
            android:layout_marginLeft="@dimen/marginleft"
            android:onClick="decrement"
            android:padding="@dimen/button_padding"
            android:text="@string/minusbutton"

            />


        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="@dimen/wrap_content"
            android:layout_height="@dimen/wrap_content"
            android:layout_marginBottom="@dimen/marginbottom"
            android:padding="@dimen/textview_padding"
            android:text="@string/zero"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/plus_button"
            android:layout_width="@dimen/buttonsize"
            android:layout_height="@dimen/buttonsize"
            android:layout_marginLeft="@dimen/marginleft"
            android:onClick="increment"
            android:padding="@dimen/button_padding"
            android:text="@string/plusbutton"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/price_name"
        android:layout_width="@dimen/wrap_content"
        android:layout_height="@dimen/wrap_content"
        android:layout_marginBottom="@dimen/marginbottom"
        android:padding="@dimen/textview_padding"
        android:text="@string/price"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="@dimen/wrap_content"
        android:layout_height="@dimen/wrap_content"
        android:padding="@dimen/textview_padding"
        android:text="@string/zero"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="@dimen/wrap_content"
        android:layout_height="@dimen/wrap_content"
        android:layout_marginLeft="@dimen/marginleft"
        android:onClick="submitOrder"
        android:padding="@dimen/button_padding"
        android:text="@string/order"

        />

</LinearLayout>
